<div class="container-lg login">
    <div class="container-logo-login">
        <h1 class="title-logo">PROFEJUAN</h1>
        <img class="img-logo" src="/images/Logo.png" alt="Clases Particulares" />
    </div>
    <form action="/admin/login" method="post" class="row g-3 needs-validation" novalidate>
        <div class="col-12">
            <label for="validationCustom01" class="form-label">Usuario</label>
            <input type="text" class="form-control" id="validationCustom01" name="usuario" placeholder="Ingrese su usuario" required />
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="col-12">
            <label for="validationCustom02" class="form-label">Password</label>
            <input type="password" class="form-control" id="validationCustom02" name="password" placeholder="Ingrese su password" required />
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="col-12">
            <button class="btn btn-primary" type="submit"><span>Ingresar</span></button>
        </div>
    </form>
    {{#if error}}
        <p>Los datos ingresados son incorrectos.</p>
    {{/if}}
</div>
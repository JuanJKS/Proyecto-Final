<div class="total-container">
    <div class="container-welcome-list">
        {{! FILA 1 }}
        <div class="row welcome">
            <a class="btn btn-primary text-end" href="/admin/login/logout"><i class="fa-solid fa-right-from-bracket"></i></a>
        </div>
        {{! FIN FILA 1 }}

        {{! FILA 2 }}
        <div class="row fila-2">
            <div class="col-7">
                <h3 class="title">Testimonios</h3>
            </div>
            <div class="col-5 text-end">
                <a class="btn btn-primary new" href="/admin/opiniones/agregar"><i class="fa fa-plus" aria-hidden="true"></i>Nuevo</a>
            </div>
        </div>
        {{! FIN FILA 2 }}

        {{! FILA 3 }}
        <div class="row">
            <div class="col">
                <table class="table">
                    <thead>
                        <tr class="table-blue">
                            <th scope="col">#</th>
                            <th scope="col">Testimonio</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each opiniones}}
                        <tr class="not-border">
                            <th scope="row">{{id_op}}</th>
                            <td>{{opinion}}</td>
                            <td class="icons">
                                <a class="btn btn-secondary" href="/admin/opiniones/modificar/{{id_op}}"><i class="fa-regular fa-pen-to-square" aria-hidden="true"></i></a>
                                <a class="btn btn-secondary" href="/admin/opiniones/eliminar/{{id_op}}"><i class="fa-regular fa-trash-can" aria-hidden="true"></i></a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
        {{! FIN FILA 3 }}
    </div>
</div>